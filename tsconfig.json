{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,           // JSファイルを許可
    "checkJs": false,          // JSファイルの型チェックを無効
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,           // 最初は緩い設定
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "paths": {
      "@_views/*": ["./src/views/*"],
      "@_components/*": ["./src/components/*"],
      "@_data/*": ["./src/data/*"],
      "@_resources/*": ["./src/resources/*"],
      "@_manager/*": ["./src/manager/*"],
      "@_map/*": ["./src/map/*"],
      "@team4am/fp-core": ["./src/core.jsx"],
      "@team4am/fp-form": ["./src/form.jsx"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "bin"]
}